<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 display-4">Listing Stations</h4>
  </div>
  <%= link_to 'Create Station', new_station_path %>
  <% if @stations.present? %>
    <div class="row justify-content-center">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Status</th>
            <th scope="col">Location</th>
            <th scope="col">Warehouse</th>

            <th scope="col" colspan="3">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @stations.each do |station| %>
            <tr>
              <td><%= station.name %></td>
              <td><%= station.status %></td>
              <td><%= station.location.address %></td>
              <td><%= station.warehouse.name %></td>

              <td><%= link_to 'Show', station_path(station) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="p-3 mb-2 bg-light text-dark">
      <span class="text-info font-weight-bold">Welcome! </span>
      Create your first station
    </div>
  <% end %>
                <%= link_to 'Back ', home_dashboard_path, class: 'btn btn-primary mt-2' %>

</div>
