<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Station</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @station, local: true do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= form.label :location_id, "Location" %>
      <%= form.collection_select :location_id, Location.all, :id, :address, prompt: 'Select a location', class: 'form-control' %>
    </div>

      <div class="form-group">
      <%= form.label :warehouse_id, "Warehouse" %>
      <%= form.collection_select :warehouse_id, Warehouse.all, :id, :name, prompt: 'Select a name', class: 'form-control' %>
    </div>

      <div class="form-group">
        <%= form.label :status %>
        <%= form.select :status, options_for_select(['online', 'offline'], @station.status), {}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>