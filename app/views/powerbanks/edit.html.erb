<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit PowerBank</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with(model: @power_bank, url: powerbank_path(@power_bank), local: true) do |form| %>
      
      <div class="field">
        <%= form.label :status %>
        <%= form.select :status, options_for_select([['In Use', 'in_use'], ['Available', 'available']], @power_bank.status) %>
      </div>
      
      <div class="form-group">
        <%= form.submit 'Update', class: 'btn btn-primary' %>
      </div>

    <% end %>
  </div>
</div>
