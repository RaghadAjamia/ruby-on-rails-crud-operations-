<%= render 'home/adminheader'%>

<section class="section pt-3" style="margin: 20px;">
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <p class="title is-5 border-bottom pb-3 has-text-centered">Welcome 👋🏻</p>
      <p class="lead">You’re now in the Admin Dashboard where you can oversee and manage the entire system with ease. Here, you can view key metrics, manage users, update locations, and track power banks.</p>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-4 mb-4">
        <div class="card" style="width: 100%;">
          <div class="card-body">
            <h5 class="card-title">Location</h5>
            <p class="card-text">You can view update create locations .</p>
          <%= link_to 'See Locations', locations_path, class: 'btn btn-primary mt-2' %>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
          <div class="card" style="width: 100%;">
            <div class="card-body">
              <h5 class="card-title">Warehouses</h5>
              <p class="card-text">You can view, or create warehouses.</p>
              <%= link_to 'See Warehouses', warehouses_path, class: 'btn btn-primary mt-2' %>

          </div>
        </div>


        
      </div>
       <div class="col-md-4 mb-4">
          <div class="card" style="width: 100%;">
            <div class="card-body">
              <h5 class="card-title">Stations</h5>
              <p class="card-text">You can view, or create stations.</p>
              <%= link_to 'See Stations',stations_path, class: 'btn btn-primary mt-2' %>
          </div>
        </div>
      </div>

      <div class="col-md-4 mb-4">
      <div class="card" style="width: 100%;">
        <div class="card-body">
          <h5 class="card-title">Power Banks</h5>
          <p class="card-text"> view, update, or create power banks.</p>
              <%= link_to 'See Power Banks',powerbanks_path, class: 'btn btn-primary mt-2' %>
          </div>
        </div>
      </div>

      <div class="col-md-4 mb-4">
      <div class="card" style="width: 100%;">
        <div class="card-body">
          <h5 class="card-title">Users</h5>
          <p class="card-text">You  create user here!</p>
              <%= link_to 'See Power Banks',new_user_registration_path, class: 'btn btn-primary mt-2' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
