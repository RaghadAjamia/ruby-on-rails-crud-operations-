<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Warehouse</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with model: @warehouse, local: true do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= form.label :location_id, "Location" %>
        <%= form.collection_select :location_id, Location.all, :id, :address, prompt: 'Select a location', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit 'Save Warehouse', class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
